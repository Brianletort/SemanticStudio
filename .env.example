# Database
DATABASE_URL=postgres://agentkit:agentkit@localhost:5433/agentkit

# LLM Providers
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
OLLAMA_BASE_URL=http://localhost:11434

# Default LLM Provider (openai, anthropic, ollama)
DEFAULT_LLM_PROVIDER=openai

# Brave Search API Keys
# Get keys from https://brave.com/search/api/
BRAVE_API_KEY_AI_GROUNDING=your-brave-ai-grounding-key  # For chat web search
BRAVE_API_KEY_PRO=your-brave-pro-key                     # For ETL (optional)
BRAVE_API_KEY_PRO_AI=your-brave-pro-ai-key               # For ETL (optional)

# File Storage
FILE_STORAGE_PATH=./uploads

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Azure Cognitive Search (Optional)
# Configure to enable Azure AI Search as a search backend alongside PostgreSQL pgvector
# Create a service at https://portal.azure.com/ -> Azure AI Search
AZURE_SEARCH_ENDPOINT=https://your-service-name.search.windows.net
AZURE_SEARCH_API_KEY=your-admin-api-key
AZURE_SEARCH_API_VERSION=2024-07-01
